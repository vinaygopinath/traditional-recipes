{
  "name": "traditional-recipes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "24.0.19",
    "@types/node": "^16.3.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "grommet": "^2.17.3",
    "grommet-icons": "^4.5.0",
    "i18next": "^20.3.1",
    "i18next-browser-languagedetector": "^6.1.1",
    "i18next-http-backend": "^1.2.6",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.10.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.0",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "prestart": "yarn generate-validation-schema && yarn validate-schema",
    "prebuild": "yarn generate-validation-schema && yarn validate-schema",
    "generate-recipe-schema": "typescript-json-validator --useNamedExport src/models/Recipe.ts Recipe && sed -i \"/^export [{]/d\" src/models/Recipe.validator.ts",
    "generate-ingredient-schema": "typescript-json-validator --useNamedExport src/models/Ingredient.ts Ingredient && sed -i \"/^export [{]/d\" src/models/Ingredient.validator.ts",
    "generate-validation-schema": "yarn generate-recipe-schema && yarn generate-ingredient-schema",
    "validate-schema": "ts-node -O '{\"module\": \"commonjs\"}' src/scripts/validate-schema.ts",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "jest-extended": "^0.11.5",
    "ts-node": "^10.1.0",
    "typescript-json-validator": "^2.4.2"
  }
}
